<div class="container">

  <h1>Productos</h1>

  <%= link_to "Nuevo producto", new_product_path %>

  <table style="width:70%">
    <tr>
      <th><b>Nombre</b></th>
      <th><b>Precio</b></th>
      <th><b>Categor√≠a</b></th>
    </tr>
    <% @products.each do |product|%>
    <tr>
      <td><%=product.name%></td>
      <td><%=product.price%></td>
      <%categorias = ""%>
      <%product.categories.each do |category|%>
        <%categorias = categorias + " "+ category.name%>
      <%end%>
      <td><%=categorias%></td>
      <td><%=link_to "Editar", edit_product_path(product) %><%=link_to "Eliminar", product, method: :delete %></td>
      <%end%>

  </table>
</div>
