<div class="container">
  <h1>Editar producto</h1>
  <%= form_for @product do |f| %>
    <%= f.text_field :name, placeholder: "Nombre del producto" %> <br>
    <%= f.text_field :price, placeholder: "Precio del producto" %> <br>

    <% @categories.each do |category|%>
      <%ids = @product.categories.ids%>
      <%puts(ids)%>
      <%check = false%>
      <%ids.length.times do |i| %>
        <%p_category = ids[i]%>
        <%if p_category == category.id %>
         <%check = true %>
        <%end %>
      <%end%>

      <%= check_box_tag "category[c"+category.id.to_s+"]", value = "1", checked = check, options = {} %><%=category.name%><br>
    <%end%>
    <!-- <%= check_box_tag "category[Enlatados]", value = "1", checked = false, options = {} %> Enlatados<br>
    <%= check_box_tag "category[Carnes rojas]", value = "1", checked = false, options = {} %> Carnes rojas<br>
    <%= check_box_tag "category[c]", value = "1", checked = false, options = {} %> Carnes blancas<br> -->
    <%= f.submit "Editar" %>
  <% end %>


